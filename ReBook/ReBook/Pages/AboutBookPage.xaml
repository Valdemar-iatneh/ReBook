                            <Image Source="logo.png"
                            WidthRequest="70"
                            HeightRequest="70"
                            Margin="24, 18"/>
                            <Label Style="{StaticResource mainTextStyle}" 
                            FontSize="22"
                            VerticalOptions="Center"
                            Text="Автор отзыва"/>
